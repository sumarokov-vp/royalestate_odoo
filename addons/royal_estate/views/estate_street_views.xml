<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_street_view_form" model="ir.ui.view">
        <field name="name">estate.street.form</field>
        <field name="model">estate.street</field>
        <field name="arch" type="xml">
            <form string="Улица">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="city_id"/>
                        </group>
                        <group>
                            <field name="district_id" domain="[('city_id', '=', city_id)]"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_street_view_list" model="ir.ui.view">
        <field name="name">estate.street.list</field>
        <field name="model">estate.street</field>
        <field name="arch" type="xml">
            <list string="Улицы">
                <field name="name"/>
                <field name="city_id"/>
                <field name="district_id" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="estate_street_view_search" model="ir.ui.view">
        <field name="name">estate.street.search</field>
        <field name="model">estate.street</field>
        <field name="arch" type="xml">
            <search string="Улицы">
                <field name="name"/>
                <field name="district_id"/>
                <field name="city_id"/>
                <separator/>
                <filter name="archived" string="Архив" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="group_district" string="Район" context="{'group_by': 'district_id'}"/>
                <filter name="group_city" string="Город" context="{'group_by': 'city_id'}"/>
            </search>
        </field>
    </record>

    <record id="estate_street_action" model="ir.actions.act_window">
        <field name="name">Улицы</field>
        <field name="res_model">estate.street</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_district': 1}</field>
    </record>
</odoo>
