<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_climate_equipment_view_form" model="ir.ui.view">
        <field name="name">estate.climate.equipment.form</field>
        <field name="model">estate.climate.equipment</field>
        <field name="arch" type="xml">
            <form string="Климатическое оборудование">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_climate_equipment_view_list" model="ir.ui.view">
        <field name="name">estate.climate.equipment.list</field>
        <field name="model">estate.climate.equipment</field>
        <field name="arch" type="xml">
            <list string="Климатическое оборудование" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="estate_climate_equipment_action" model="ir.actions.act_window">
        <field name="name">Климатическое оборудование</field>
        <field name="res_model">estate.climate.equipment</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
