<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_city_view_form" model="ir.ui.view">
        <field name="name">estate.city.form</field>
        <field name="model">estate.city</field>
        <field name="arch" type="xml">
            <form string="Город">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Районы" name="districts">
                            <field name="district_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_city_view_list" model="ir.ui.view">
        <field name="name">estate.city.list</field>
        <field name="model">estate.city</field>
        <field name="arch" type="xml">
            <list string="Города">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="estate_city_action" model="ir.actions.act_window">
        <field name="name">Города</field>
        <field name="res_model">estate.city</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
