<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard: Параметры парсинга -->
    <record id="view_krisha_parser_wizard_form" model="ir.ui.view">
        <field name="name">krisha.parser.wizard.form</field>
        <field name="model">krisha.parser.wizard</field>
        <field name="arch" type="xml">
            <form string="Парсинг Krisha.kz">
                <group>
                    <group string="Параметры поиска">
                        <field name="city"/>
                        <field name="rooms" placeholder="1,2,3"/>
                        <field name="price_from"/>
                        <field name="price_to"/>
                    </group>
                    <group string="Фильтры">
                        <field name="has_photo"/>
                        <field name="owner"/>
                        <field name="max_pages"/>
                    </group>
                </group>
                <footer>
                    <button name="action_parse" string="Парсить" type="object" class="btn-primary"/>
                    <button string="Отмена" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard: Превью результатов -->
    <record id="view_krisha_parser_preview_form" model="ir.ui.view">
        <field name="name">krisha.parser.preview.form</field>
        <field name="model">krisha.parser.preview</field>
        <field name="arch" type="xml">
            <form string="Результаты парсинга">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Найдено: <field name="total_found" class="oe_inline" readonly="1"/>
                            | Дубликатов: <field name="duplicates_count" class="oe_inline" readonly="1"/>
                            | Выбрано: <field name="selected_count" class="oe_inline" readonly="1"/>
                        </h1>
                    </div>
                    <div class="mb-3">
                        <button name="action_select_all" string="Выбрать всё" type="object" class="btn-link"/>
                        <button name="action_deselect_all" string="Снять выделение" type="object" class="btn-link"/>
                    </div>
                    <field name="result_ids" nolabel="1">
                        <list editable="bottom" create="0" delete="0">
                            <field name="selected"/>
                            <field name="rooms" string="Комн."/>
                            <field name="area" string="м²"/>
                            <field name="floor"/>
                            <field name="floors_total" string="Этажей"/>
                            <field name="price" string="Цена ₸"/>
                            <field name="city"/>
                            <field name="address"/>
                            <field name="is_duplicate" column_invisible="1"/>
                            <field name="krisha_url" widget="url" string="URL"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button name="action_import_selected" string="Импортировать выбранные" type="object" class="btn-primary"/>
                    <button string="Отмена" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action для кнопки в list view -->
    <record id="action_krisha_parser" model="ir.actions.act_window">
        <field name="name">Парсить Krisha.kz</field>
        <field name="res_model">krisha.parser.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
